{
  "name": "port11-debugger",
  "displayName": "Port11 Debugger",
  "description": "MSPM0 Development and Debugging Extension",
  "version": "0.1.0",
  "publisher": "Red Nerds",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Debuggers",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "MSPM0",
    "TI",
    "embedded",
    "debugger",
    "ARM"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "port11-debugger",
          "title": "Port11 Debugger",
          "icon": "$(circuit-board)"
        }
      ]
    },
    "views": {
      "port11-debugger": [
        {
          "id": "port11.debugView",
          "name": "Port11 Debugger"
        }
      ]
    },
    "commands": [
      {
        "command": "port11-debugger.setupToolchain",
        "title": "Port11: Setup Toolchain",
        "icon": "$(tools)"
      },
      {
        "command": "port11-debugger.build",
        "title": "Port11: Build Project",
        "icon": "$(tools)"
      },
      {
        "command": "port11-debugger.flash",
        "title": "Port11: Flash Firmware",
        "icon": "$(zap)"
      },
      {
        "command": "port11-debugger.debug.start",
        "title": "Port11: Start Debug Session",
        "icon": "$(debug-start)"
      },
      {
        "command": "port11-debugger.debug.stop",
        "title": "Port11: Stop Debug Session",
        "icon": "$(debug-stop)"
      },
      {
        "command": "port11-debugger.debug.pause",
        "title": "Port11: Pause Debug Session",
        "icon": "$(debug-pause)"
      },
      {
        "command": "port11-debugger.debug.resume",
        "title": "Port11: Resume Debug Session",
        "icon": "$(debug-continue)"
      },
      {
        "command": "port11-debugger.debug.restart",
        "title": "Port11: Restart Debug Session",
        "icon": "$(debug-restart)"
      },
      {
        "command": "port11-debugger.detectBoards",
        "title": "Port11: Detect Boards",
        "icon": "$(search)"
      },
      {
        "command": "port11-debugger.refreshView",
        "title": "Port11: Refresh View",
        "icon": "$(refresh)"
      },
      {
        "command": "port11-debugger.showLogs",
        "title": "Port11: Show Output Logs",
        "icon": "$(output)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "port11-debugger.refreshView",
          "when": "view == port11.debugView",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "port11-debugger.setupToolchain"
        },
        {
          "command": "port11-debugger.build"
        },
        {
          "command": "port11-debugger.flash"
        },
        {
          "command": "port11-debugger.debug.start"
        },
        {
          "command": "port11-debugger.debug.stop"
        },
        {
          "command": "port11-debugger.debug.pause"
        },
        {
          "command": "port11-debugger.debug.resume"
        },
        {
          "command": "port11-debugger.debug.restart"
        },
        {
          "command": "port11-debugger.detectBoards"
        },
        {
          "command": "port11-debugger.refreshView"
        }
      ]
    },
    "configuration": {
      "title": "Port11 Debugger",
      "properties": {
        "port11-debugger.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically check for SDK and toolchain updates"
        },
        "port11-debugger.sdkPath": {
          "type": "string",
          "description": "Custom path to MSPM0 SDK (leave empty for auto-install)"
        },
        "port11-debugger.toolchainPath": {
          "type": "string",
          "description": "Custom path to ARM-CGT-CLANG toolchain (leave empty for auto-install)"
        },
        "port11-debugger.sysConfigPath": {
          "type": "string",
          "description": "Custom path to TI SysConfig (leave empty for auto-install)"
        },
        "port11-debugger.serialPort": {
          "type": "string",
          "description": "Override auto-detected serial port"
        },
        "port11-debugger.debugVerbose": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose output for DAP CLI debugging operations"
        },
        "port11-debugger.offlineMode": {
          "type": "boolean",
          "default": false,
          "description": "Skip automatic downloads, use only cached/manually installed toolchains"
        },
        "port11-debugger.buildOutputLevel": {
          "type": "string",
          "default": "normal",
          "description": "Control the amount of build output displayed",
          "enum": [
            "minimal",
            "normal",
            "verbose",
            "diagnostic"
          ]
        },
        "port11-debugger.autoDetectBoards": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect connected MSPM0 boards on startup"
        },
        "port11-debugger.flashVerify": {
          "type": "boolean",
          "default": true,
          "description": "Verify firmware after flashing to ensure integrity"
        },
        "port11-debugger.debugTimeout": {
          "type": "number",
          "default": 10000,
          "description": "Timeout in milliseconds for debug operations (DAP commands)",
          "minimum": 1000,
          "maximum": 60000
        },
        "port11-debugger.includePaths": {
          "type": "array",
          "default": [],
          "description": "Additional include paths for compilation",
          "items": {
            "type": "string"
          }
        },
        "port11-debugger.compilerFlags": {
          "type": "array",
          "default": [
            "-O2",
            "-Wall"
          ],
          "description": "Additional compiler flags for build",
          "items": {
            "type": "string"
          }
        },
        "port11-debugger.enableStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Port11 status bar items"
        },
        "port11-debugger.showWelcomeOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Show welcome message on first startup"
        },
        "port11-debugger.checkForUpdatesOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Check for extension updates on startup"
        },
        "port11-debugger.logLevel": {
          "type": "string",
          "default": "info",
          "description": "Logging level for output channel",
          "enum": [
            "error",
            "warning",
            "info",
            "debug",
            "trace"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "glob": "^10.3.10",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1"
  },
  "dependencies": {
    "simple-git": "^3.20.0"
  }
}