{
  "name": "port11-debugger",
  "displayName": "Port11 Debugger",
  "description": "MSPM0 Development and Debugging Extension",
  "version": "0.1.0",
  "publisher": "YuduRobotics",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Debuggers",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "MSPM0",
    "TI",
    "embedded",
    "debugger",
    "ARM"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:port11-debugger.setupToolchain",
    "onCommand:port11-debugger.detectBoards",
    "onCommand:port11-debugger.build",
    "onCommand:port11-debugger.flash",
    "onCommand:port11-debugger.debug.start",
    "onCommand:port11-debugger.debug.stop",
    "onCommand:port11-debugger.debug.pause",
    "onCommand:port11-debugger.debug.resume",
    "onCommand:port11-debugger.debug.restart",
    "onCommand:port11-debugger.refreshStatus",
    "onCommand:port11-debugger.refreshView",
    "onCommand:port11-debugger.openSettings",
    "onCommand:port11-debugger.showLogs",
    "onCommand:extension.buildCommand",
    "onCommand:extension.flashCommand",
    "onCommand:extension.haltCommand",
    "onCommand:extension.resumeCommand",
    "onCommand:extension.eraseCommand",
    "onCommand:extension.connectCommand"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "port11-debugger",
          "title": "Port11 Debugger",
          "icon": "$(circuit-board)"
        }
      ]
    },
    "views": {
      "port11-debugger": [
        {
          "id": "port11.variablesView",
          "name": "Breakpoints",
          "type": "webview",
          "icon": "$(debug-breakpoint)"
        },
        {
          "id": "port11.dataView",
          "name": "Variables",
          "type": "webview",
          "icon": "$(symbol-variable)"
        },
        {
          "id": "port11.boardsView",
          "name": "Boards",
          "type": "webview",
          "icon": "$(device-mobile)"
        },
        {
          "id": "port11.setupView",
          "name": "Setup Status",
          "type": "webview",
          "icon": "$(gear)"
        },
        {
          "id": "port11.consoleView",
          "name": "Console",
          "type": "webview",
          "icon": "$(terminal)"
        }
      ]
    },
    "commands": [
      {
        "command": "port11-debugger.setupToolchain",
        "title": "Port11: Setup Toolchain",
        "icon": "$(tools)"
      },
      {
        "command": "port11-debugger.build",
        "title": "Port11: Build Project",
        "icon": "$(tools)"
      },
      {
        "command": "port11-debugger.flash",
        "title": "Port11: Flash Firmware",
        "icon": "$(zap)"
      },
      {
        "command": "port11-debugger.debug.start",
        "title": "Port11: Start Debug Session",
        "icon": "$(debug-start)"
      },
      {
        "command": "port11-debugger.debug.stop",
        "title": "Port11: Stop Debug Session",
        "icon": "$(debug-stop)"
      },
      {
        "command": "port11-debugger.debug.pause",
        "title": "Port11: Pause Debug Session",
        "icon": "$(debug-pause)"
      },
      {
        "command": "port11-debugger.debug.resume",
        "title": "Port11: Resume Debug Session",
        "icon": "$(debug-continue)"
      },
      {
        "command": "port11-debugger.debug.restart",
        "title": "Port11: Restart Debug Session",
        "icon": "$(debug-restart)"
      },
      {
        "command": "port11-debugger.detectBoards",
        "title": "Port11: Detect Boards",
        "icon": "$(search)"
      },
      {
        "command": "port11-debugger.refreshView",
        "title": "Port11: Refresh View",
        "icon": "$(refresh)"
      },
      {
        "command": "port11-debugger.showLogs",
        "title": "Port11: Show Output Logs",
        "icon": "$(output)"
      }
    ],
    "menus": {
      "view/title": [],
      "commandPalette": [
        {
          "command": "port11-debugger.setupToolchain"
        },
        {
          "command": "port11-debugger.build"
        },
        {
          "command": "port11-debugger.flash"
        },
        {
          "command": "port11-debugger.debug.start"
        },
        {
          "command": "port11-debugger.debug.stop"
        },
        {
          "command": "port11-debugger.debug.pause"
        },
        {
          "command": "port11-debugger.debug.resume"
        },
        {
          "command": "port11-debugger.debug.restart"
        },
        {
          "command": "port11-debugger.detectBoards"
        },
        {
          "command": "port11-debugger.refreshView"
        }
      ]
    },
    "configuration": {
      "title": "Port11 Debugger",
      "properties": {
        "port11-debugger.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically check for SDK and toolchain updates"
        },
        "port11-debugger.sdkPath": {
          "type": "string",
          "description": "Custom path to MSPM0 SDK (leave empty for auto-install)"
        },
        "port11-debugger.toolchainPath": {
          "type": "string",
          "description": "Custom path to ARM-CGT-CLANG toolchain (leave empty for auto-install)"
        },
        "port11-debugger.sysConfigPath": {
          "type": "string",
          "description": "Custom path to TI SysConfig (leave empty for auto-install)"
        },
        "port11-debugger.dapPath": {
          "type": "string",
          "description": "Custom path to DAP CLI executable"
        },
        "port11-debugger.defaultBoard": {
          "type": "string",
          "description": "Preferred default board for new projects"
        }
      }
    }
  }
}
